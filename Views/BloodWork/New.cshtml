@model MedChartApp.Models.BloodWork
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">

     $(document).ready(function () {
         $('.date') .datepicker({
                 dateFormat: "dd/M/yy",
                 inline: true,
                 showOtherMonths: true
             });
     });
    </script>

}
<div class="panel panel-default">
    <div class="panel-body">
        <h2 >New Blood Work Entry</h2>
        @using (Html.BeginForm("Save", "BloodWork"))
        {
            <div class="row">
                <div class="col-md-6 col-sm-12 col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(a => a.ExamDate)
                        @Html.TextBoxFor(a => a.ExamDate, "{0: dd/M/yy}" , new { @class = "form-control date",  id = "date" })
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(a => a.ResultDate)
                        @Html.TextBoxFor(a => a.ResultDate, new { @class = "form-control date", id = "resultDate" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(a => a.Description)
                        @Html.TextAreaFor(a => a.Description, new { @class = "form-control",  id = "description" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-12 col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(a => a.Hemoglobin)
                        @Html.TextBoxFor(a => a.Hemoglobin, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3 col-sm-12 col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(a => a.Hematocrit)
                        @Html.TextBoxFor(a => a.Hematocrit, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3 col-sm-12 col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(a => a.WhiteBloodCellCount)
                        @Html.TextBoxFor(a => a.WhiteBloodCellCount, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3 col-sm-12 col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(a => a.RedBloodCellCount)
                        @Html.TextBoxFor(a => a.RedBloodCellCount, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-12 col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(a => a.MCV)
                        @Html.TextBoxFor(a => a.MCV, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3 col-sm-12 col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(a => a.MCHC)
                        @Html.TextBoxFor(a => a.MCHC, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3 col-sm-12 col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(a => a.RDW)
                        @Html.TextBoxFor(a => a.RDW, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3 col-sm-12 col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(a => a.PlateletCount)
                        @Html.TextBoxFor(a => a.PlateletCount, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            @Html.HiddenFor(a => a.Id)
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/BloodWork/Index" class="btn btn-danger">Cancel</a>
        }
    </div>
</div>


  
